@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Menu</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MenuType)
        </div>
           <div class="editor-field">
               @Html.DropDownListFor(model => model.MenuType, 
                    new SelectList(Enum.GetValues(typeof(MenuType)).Cast<MenuType>().Where(x => x != MenuType.Combo)), 
                    "Select Type")
            @Html.ValidationMessageFor(model => model.MenuType)
        </div>
        <br />
        <p>
            <input type="submit" value="Add" />
        </p>
        <div>
        @Html.ActionLink("Back to Menu Page", "Detail")
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
